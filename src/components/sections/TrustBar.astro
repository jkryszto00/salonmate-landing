---

<section class="integrations">
  <div class="integrations-content">
    <div class="integrations-header">
      <span class="integrations-badge">Integracje</span>
      <h2 class="integrations-title">Działa z narzędziami, których używasz</h2>
      <p class="integrations-desc">Podłącz w 5 minut. Bez wiedzy technicznej.</p>
    </div>

    <div class="integrations-grid">
      {trustLogos.map((item) => (
        <div class="integration-card" style={`--accent: ${item.color}`}>
          <div class="integration-icon">
            <Fragment set:html={icons[item.name]} />
          </div>
          <div class="integration-info">
            <span class="integration-name">{item.name}</span>
            <span class="integration-desc">{item.description}</span>
          </div>
          <div class="integration-status">
            <span class="status-dot"></span>
          </div>
        </div>
      ))}
    </div>

    <p class="integrations-note">
      <span class="note-icon">+</span>
      Więcej integracji wkrótce
    </p>
  </div>
</section>

<style>
  .integrations {
    padding: 5rem 4rem;
    background: linear-gradient(180deg, white 0%, var(--color-cream) 100%);
  }

  .integrations-content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .integrations-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .integrations-badge {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: rgba(139, 115, 85, 0.1);
    color: var(--color-accent);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 100px;
    margin-bottom: 1rem;
  }

  .integrations-title {
    font-family: var(--font-serif);
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 400;
    margin-bottom: 0.75rem;
  }

  .integrations-desc {
    color: var(--color-taupe);
    font-size: 1rem;
  }

  .integrations-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 1rem;
  }

  .integration-card {
    background: white;
    border: 1px solid rgba(166, 155, 141, 0.15);
    border-radius: 16px;
    padding: 1.5rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .integration-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(26, 24, 23, 0.08);
    border-color: var(--accent);
  }

  .integration-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: color-mix(in srgb, var(--accent) 10%, transparent);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    transition: all 0.3s ease;
  }

  .integration-icon :global(svg) {
    width: 24px;
    height: 24px;
  }

  .integration-card:hover .integration-icon {
    background: var(--accent);
    color: white;
  }

  .integration-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    text-align: center;
  }

  .integration-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-warm-black);
  }

  .integration-desc {
    font-size: 0.75rem;
    color: var(--color-taupe);
  }

  .integration-status {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
  }

  .status-dot {
    display: block;
    width: 8px;
    height: 8px;
    background: var(--color-success);
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .integration-card:hover .status-dot {
    opacity: 1;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .integrations-note {
    text-align: center;
    margin-top: 2rem;
    font-size: 0.85rem;
    color: var(--color-taupe);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .note-icon {
    width: 20px;
    height: 20px;
    background: rgba(139, 115, 85, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    color: var(--color-accent);
    font-weight: 600;
  }

  @media (max-width: 1024px) {
    .integrations {
      padding: 4rem 2rem;
    }

    .integrations-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 768px) {
    .integrations {
      padding: 3rem 1.5rem;
    }

    .integrations-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .integration-card {
      padding: 1.25rem 0.75rem;
    }

    .integration-icon {
      width: 40px;
      height: 40px;
    }

    .integration-icon :global(svg) {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    .integrations-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .integration-card {
      padding: 1rem 0.5rem;
      border-radius: 12px;
    }

    .integration-icon {
      width: 36px;
      height: 36px;
      border-radius: 10px;
    }

    .integration-name {
      font-size: 0.8rem;
    }

    .integration-desc {
      font-size: 0.7rem;
    }

    .status-dot {
      width: 6px;
      height: 6px;
    }
  }

  @media (max-width: 380px) {
    .integrations {
      padding: 2.5rem 1rem;
    }

    .integrations-header {
      margin-bottom: 2rem;
    }

    .integrations-title {
      font-size: 1.35rem;
    }

    .integrations-desc {
      font-size: 0.9rem;
    }
  }
</style>
