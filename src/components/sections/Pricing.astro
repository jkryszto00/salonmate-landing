---
/**
 * Pricing Section Component
 * Pricing cards with tiers
 */

import Icon from '../ui/Icon.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import { pricingPlans } from '../../data/site';
---

<section class="pricing" id="pricing">
  <div class="pricing-header">
    <SectionHeader
      label="Cennik"
      title="Proste ceny, zero ukrytych kosztów"
      centered
    />
  </div>
  <div class="pricing-cards">
    {pricingPlans.map((plan) => (
      <div class:list={['pricing-card', { featured: plan.featured }]}>
        <p class="pricing-tier">{plan.tier}</p>
        <p class="pricing-price">
          {plan.price} {plan.price !== 'Indywidualnie' && <span>zł</span>}
        </p>
        <p class="pricing-period">{plan.period}</p>
        <p class="pricing-desc">{plan.description}</p>
        <ul class="pricing-features">
          {plan.features.map((feature) => (
            <li>
              <Icon name="check" size={14} />
              {feature}
            </li>
          ))}
        </ul>
        <a href="#waitlist" class="pricing-btn">
          {plan.tier === 'Sieci salonów' ? 'Skontaktuj się' : 'Dołącz do waitlisty'}
        </a>
      </div>
    ))}
  </div>
</section>

<style>
  .pricing {
    padding: 6rem 4rem;
    background: linear-gradient(180deg, var(--color-cream) 0%, var(--color-cream-dark) 100%);
  }

  .pricing-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing-card {
    background: #fff;
    padding: 2rem;
    transition: all 0.4s ease;
    position: relative;
  }

  .pricing-card.featured {
    background: var(--color-warm-black);
    color: var(--color-cream);
    transform: scale(1.02);
  }

  .pricing-card.featured::before {
    content: 'Najpopularniejszy';
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-accent);
    color: white;
    font-size: 0.65rem;
    padding: 0.35rem 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;
  }

  .pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 30px 60px -20px rgba(26, 24, 23, 0.15);
  }

  .pricing-card.featured:hover {
    transform: scale(1.02) translateY(-8px);
  }

  .pricing-tier {
    font-size: 0.75rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-taupe);
    margin-bottom: 0.5rem;
  }

  .pricing-card.featured .pricing-tier {
    color: var(--color-soft-brown);
  }

  .pricing-price {
    font-family: var(--font-serif);
    font-size: 3rem;
    font-weight: 400;
    line-height: 1;
    margin-bottom: 0.25rem;
  }

  .pricing-price span {
    font-size: 1.1rem;
    color: var(--color-taupe);
  }

  .pricing-period {
    font-size: 0.8rem;
    color: var(--color-taupe);
    margin-bottom: 1.25rem;
  }

  .pricing-desc {
    font-size: 0.85rem;
    color: var(--color-taupe);
    margin-bottom: 1.5rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid rgba(166, 155, 141, 0.15);
  }

  .pricing-card.featured .pricing-desc {
    border-color: rgba(255, 255, 255, 0.1);
  }

  .pricing-features {
    list-style: none;
    margin-bottom: 1.5rem;
  }

  .pricing-features li {
    padding: 0.5rem 0;
    font-size: 0.85rem;
    color: var(--color-taupe);
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .pricing-features li :global(svg) {
    color: var(--color-success);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .pricing-btn {
    display: block;
    width: 100%;
    padding: 0.9rem;
    text-align: center;
    background: transparent;
    border: 1px solid var(--color-warm-black);
    color: var(--color-warm-black);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 500;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .pricing-btn:hover {
    background: var(--color-warm-black);
    color: var(--color-cream);
  }

  .pricing-card.featured .pricing-btn {
    background: var(--color-cream);
    border-color: var(--color-cream);
    color: var(--color-warm-black);
  }

  .pricing-card.featured .pricing-btn:hover {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  @media (max-width: 1024px) {
    .pricing {
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .pricing-cards {
      grid-template-columns: 1fr 1fr;
    }

    .pricing-card:last-child {
      grid-column: span 2;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card.featured {
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .pricing {
      padding: 4rem 1.5rem;
    }

    .pricing-cards {
      grid-template-columns: 1fr;
    }

    .pricing-card:last-child {
      grid-column: auto;
      max-width: none;
    }
  }

  @media (max-width: 380px) {
    .pricing {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>
