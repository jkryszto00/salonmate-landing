---
/**
 * Hero Section Component
 * Main landing hero with content and phone mockup
 */

import Icon from '../ui/Icon.astro';
import Button from '../ui/Button.astro';
import PhoneMockup from './PhoneMockup.astro';
import { heroContent } from '../../data/site';
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-badge animate-fade-up delay-200">
      <span>{heroContent.badge}</span>
    </div>
    <h1 class="hero-title animate-fade-up delay-400">
      <span class="line">{heroContent.title.line1} </span>
      <span class="line">{heroContent.title.line2} </span>
      <span class="line"><em>{heroContent.title.line3}</em></span>
    </h1>
    <p class="hero-desc animate-fade-up delay-600">
      {heroContent.description}
    </p>
    <div class="hero-benefits animate-fade-up delay-700">
      {heroContent.benefits.map((benefit) => (
        <div class="hero-benefit">
          <Icon name="check" size={18} />
          {benefit}
        </div>
      ))}
    </div>
    <div class="hero-cta-group animate-fade-up delay-800">
      <Button href="/#waitlist" icon="arrow-right">
        {heroContent.ctaText}
      </Button>
      <span class="hero-cta-note">{heroContent.ctaNote}</span>
    </div>
  </div>
  <div class="hero-visual animate-fade-in delay-500">
    <div class="floating-card floating-card-1 animate-float-in delay-1200">
      <div class="floating-card-icon">
        <Icon name="clock" size={20} />
      </div>
      <div class="floating-card-value">8 sek</div>
      <div class="floating-card-label">średni czas odpowiedzi</div>
    </div>
    <PhoneMockup />
    <div class="floating-card floating-card-2 animate-float-in delay-1500">
      <div class="floating-card-icon">
        <Icon name="calendar" size={20} />
      </div>
      <div class="floating-card-value">24/7</div>
      <div class="floating-card-label">dostępność</div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 0 4rem;
    gap: 4rem;
    align-items: center;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(135deg, transparent 0%, rgba(212, 200, 187, 0.15) 100%);
    z-index: -1;
  }

  .hero-content {
    padding-top: 2rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(139, 115, 85, 0.1);
    border-radius: 100px;
    font-size: 0.8rem;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
  }

  .hero-badge::before {
    content: '';
    width: 6px;
    height: 6px;
    background: var(--color-success);
    border-radius: 50%;
    animation: pulse 2s infinite;
  }

  .hero-title {
    font-family: var(--font-serif);
    font-size: clamp(2.2rem, 5.5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.08;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }

  .hero-title em {
    font-style: italic;
    color: var(--color-accent);
  }

  .hero-title .line {
    display: block;
  }

  .hero-desc {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 480px;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .hero-benefits {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  .hero-benefit {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: var(--color-warm-black);
  }

  .hero-benefit :global(svg) {
    color: var(--color-success);
    flex-shrink: 0;
  }

  .hero-cta-group {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .hero-cta-note {
    font-size: 0.85rem;
    color: var(--color-taupe);
  }

  .hero-visual {
    position: relative;
    height: 85vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Floating cards */
  .floating-card {
    position: absolute;
    background: white;
    padding: 1rem 1.25rem;
    border-radius: 12px;
    box-shadow: var(--shadow-card);
  }

  .floating-card-1 {
    top: 15%;
    left: -60px;
  }

  .floating-card-2 {
    bottom: 20%;
    right: -40px;
  }

  .floating-card-icon {
    width: 36px;
    height: 36px;
    background: rgba(139, 115, 85, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
    color: var(--color-accent);
  }

  .floating-card-value {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-weight: 500;
    line-height: 1;
  }

  .floating-card-label {
    font-size: 0.75rem;
    color: var(--color-taupe);
  }

  @media (max-width: 1024px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding-top: 7rem;
      min-height: auto;
      gap: 2rem;
      padding-left: 2rem;
      padding-right: 2rem;
    }

    .hero::before {
      display: none;
    }

    .hero-content {
      order: 2;
      padding-top: 0;
    }

    .hero-desc,
    .hero-benefits {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-benefits {
      align-items: center;
    }

    .hero-cta-group {
      justify-content: center;
    }

    .hero-visual {
      order: 1;
      height: auto;
      padding: 1rem 0 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .floating-card {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding-top: 5rem;
      padding-left: 1.5rem;
      padding-right: 1.5rem;
      gap: 1.5rem;
    }

    .hero-title .line {
      display: inline;
    }

    .hero-visual {
      padding: 0.5rem 0 0;
    }

    .hero-cta-group {
      padding-bottom: 1rem;
      flex-direction: column;
      gap: 1rem;
    }

    .hero-cta-group :global(.btn) {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding-top: 4.5rem;
      gap: 1rem;
    }

    .hero-visual {
      padding: 0;
    }

    .hero-badge {
      font-size: 0.75rem;
      padding: 0.4rem 0.875rem;
      margin-bottom: 1rem;
    }

    .hero-desc {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    .hero-benefits {
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }

    .hero-benefit {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 380px) {
    .hero {
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 4rem;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .hero-desc {
      font-size: 0.9rem;
    }
  }
</style>
