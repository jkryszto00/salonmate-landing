---
/**
 * Navigation Component
 * Fixed top navigation with scroll effects
 */

import { navLinks, siteConfig } from '../../data/site';
---

<nav id="nav">
  <a href="/" class="logo">{siteConfig.name}<span>.</span></a>
  <div class="nav-links">
    {navLinks.map((link) => (
      <a href={link.href}>{link.label}</a>
    ))}
    <a href="/#waitlist" class="nav-cta">Dołącz</a>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 1.25rem 4rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: var(--z-nav, 100);
    background: transparent;
    transition: all 0.4s ease;
  }

  nav:global(.scrolled) {
    background: rgba(249, 247, 244, 0.97);
    backdrop-filter: blur(12px);
    box-shadow: 0 1px 0 rgba(166, 155, 141, 0.2);
  }

  .logo {
    font-family: var(--font-serif);
    font-size: 1.6rem;
    font-weight: 500;
    letter-spacing: -0.02em;
    color: var(--color-warm-black);
    text-decoration: none;
  }

  .logo span {
    color: var(--color-accent);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 2.5rem;
  }

  .nav-links a {
    font-size: 0.9rem;
    color: var(--color-warm-black);
    text-decoration: none;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .nav-links a:hover {
    opacity: 1;
  }

  .nav-cta {
    padding: 0.75rem 1.5rem;
    background: var(--color-warm-black);
    color: var(--color-cream) !important;
    opacity: 1 !important;
    font-weight: 500;
    letter-spacing: 0.02em;
    transition: all 0.3s ease;
  }

  .nav-cta:hover {
    background: var(--color-accent);
  }

  @media (max-width: 1024px) {
    nav {
      padding: 1rem 2rem;
    }

    .nav-links a:not(.nav-cta) {
      display: none;
    }
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem 1.5rem;
    }

    .logo {
      font-size: 1.4rem;
    }

    .nav-cta {
      padding: 0.6rem 1rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 380px) {
    nav {
      padding: 1rem;
    }
  }
</style>
