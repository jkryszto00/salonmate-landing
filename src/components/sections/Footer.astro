---
/**
 * Footer Component
 * Site footer with links and social
 */

import { siteConfig, footerLinks } from '../../data/site';

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="footer-content">
    <div class="footer-brand">
      <a href="/" class="logo">{siteConfig.name}<span>.</span></a>
      <p>AI recepcjonistka dla salonów beauty. Odpowiadamy na wiadomości, żebyś mogła się skupić na tym, co kochasz.</p>
    </div>
    <div class="footer-links-group">
      <div class="footer-links">
        <h4>Produkt</h4>
        {footerLinks.product.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
      <div class="footer-links">
        <h4>Kontakt</h4>
        {footerLinks.contact.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
      <div class="footer-links">
        <h4>Prawne</h4>
        {footerLinks.legal.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
    </div>
  </div>
  <div class="footer-bottom">
    <p class="footer-copy">&copy; {currentYear} {siteConfig.name}. Wszystkie prawa zastrzeżone.</p>
    <div class="footer-social">
      <a href="https://www.instagram.com/salonmateai" aria-label="Instagram" target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
