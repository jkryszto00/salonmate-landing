---
/**
 * Cookie Consent Banner
 * GDPR/RODO compliant cookie consent with GA4 Consent Mode v2
 */
---

<div class="cookie-consent" id="cookieConsent">
  <div class="cookie-content">
    <div class="cookie-text">
      <p>
        <strong>Szanujemy Twoją prywatność.</strong> Używamy cookies do analizy ruchu i optymalizacji strony.
        <a href="/polityka-prywatnosci" class="cookie-link">Polityka prywatności</a>
      </p>
    </div>
    <div class="cookie-actions">
      <button class="cookie-btn cookie-btn-settings" id="cookieSettings">Ustawienia</button>
      <button class="cookie-btn cookie-btn-reject" id="cookieReject">Odrzuć</button>
      <button class="cookie-btn cookie-btn-accept" id="cookieAccept">Akceptuję</button>
    </div>
  </div>
</div>

<!-- Cookie Settings Modal -->
<div class="cookie-modal-overlay" id="cookieModal">
  <div class="cookie-modal">
    <div class="cookie-modal-header">
      <h3>Ustawienia cookies</h3>
      <button class="cookie-modal-close" id="cookieModalClose">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="cookie-modal-body">
      <div class="cookie-option">
        <div class="cookie-option-header">
          <label class="cookie-option-label">
            <input type="checkbox" checked disabled />
            <span class="cookie-checkbox"></span>
            <strong>Niezbędne</strong>
          </label>
          <span class="cookie-badge">Zawsze aktywne</span>
        </div>
        <p class="cookie-option-desc">Wymagane do działania strony. Nie zbierają danych osobowych.</p>
      </div>

      <div class="cookie-option">
        <div class="cookie-option-header">
          <label class="cookie-option-label">
            <input type="checkbox" id="analyticsConsent" />
            <span class="cookie-checkbox"></span>
            <strong>Analityczne</strong>
          </label>
        </div>
        <p class="cookie-option-desc">Pomagają zrozumieć jak korzystasz ze strony (Google Analytics, Microsoft Clarity).</p>
      </div>

      <div class="cookie-option">
        <div class="cookie-option-header">
          <label class="cookie-option-label">
            <input type="checkbox" id="marketingConsent" />
            <span class="cookie-checkbox"></span>
            <strong>Marketingowe</strong>
          </label>
        </div>
        <p class="cookie-option-desc">Pozwalają wyświetlać spersonalizowane reklamy (Facebook Pixel).</p>
      </div>
    </div>
    <div class="cookie-modal-footer">
      <button class="cookie-btn cookie-btn-reject" id="cookieRejectAll">Odrzuć wszystkie</button>
      <button class="cookie-btn cookie-btn-accept" id="cookieSaveSettings">Zapisz ustawienia</button>
    </div>
  </div>
</div>

<style>
  .cookie-consent {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--color-warm-black);
    color: var(--color-cream);
    padding: 1.25rem 2rem;
    z-index: 9999;
    transform: translateY(100%);
    transition: transform 0.4s ease;
  }

  @media (max-width: 768px) {
    .cookie-consent {
      bottom: 70px; /* Above mobile sticky CTA */
    }
  }

  .cookie-consent.visible {
    transform: translateY(0);
  }

  .cookie-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .cookie-text p {
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
  }

  .cookie-link {
    color: var(--color-soft-brown);
    text-decoration: underline;
  }

  .cookie-link:hover {
    color: var(--color-cream);
  }

  .cookie-actions {
    display: flex;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  .cookie-btn {
    padding: 0.7rem 1.25rem;
    font-family: inherit;
    font-size: 0.85rem;
    font-weight: 500;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .cookie-btn-accept {
    background: var(--color-cream);
    color: var(--color-warm-black);
  }

  .cookie-btn-accept:hover {
    background: white;
  }

  .cookie-btn-reject {
    background: transparent;
    color: var(--color-cream);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .cookie-btn-reject:hover {
    border-color: var(--color-cream);
  }

  .cookie-btn-settings {
    background: transparent;
    color: var(--color-soft-brown);
    padding: 0.7rem 1rem;
  }

  .cookie-btn-settings:hover {
    color: var(--color-cream);
  }

  /* Modal */
  .cookie-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(26, 24, 23, 0.8);
    backdrop-filter: blur(4px);
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .cookie-modal-overlay.visible {
    opacity: 1;
    visibility: visible;
  }

  .cookie-modal {
    background: white;
    max-width: 500px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    transform: translateY(20px);
    transition: transform 0.3s ease;
  }

  .cookie-modal-overlay.visible .cookie-modal {
    transform: translateY(0);
  }

  .cookie-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(166, 155, 141, 0.2);
  }

  .cookie-modal-header h3 {
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 400;
    margin: 0;
  }

  .cookie-modal-close {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--color-taupe);
    padding: 0.25rem;
    transition: color 0.3s ease;
  }

  .cookie-modal-close:hover {
    color: var(--color-warm-black);
  }

  .cookie-modal-body {
    padding: 1.5rem;
  }

  .cookie-option {
    padding: 1rem 0;
    border-bottom: 1px solid rgba(166, 155, 141, 0.15);
  }

  .cookie-option:last-child {
    border-bottom: none;
  }

  .cookie-option-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .cookie-option-label {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
  }

  .cookie-option-label input {
    display: none;
  }

  .cookie-checkbox {
    width: 20px;
    height: 20px;
    border: 2px solid var(--color-soft-brown);
    border-radius: 4px;
    position: relative;
    transition: all 0.2s ease;
  }

  .cookie-option-label input:checked + .cookie-checkbox {
    background: var(--color-accent);
    border-color: var(--color-accent);
  }

  .cookie-option-label input:checked + .cookie-checkbox::after {
    content: '';
    position: absolute;
    left: 5px;
    top: 2px;
    width: 5px;
    height: 9px;
    border: solid white;
    border-width: 0 2px 2px 0;
    transform: rotate(45deg);
  }

  .cookie-option-label input:disabled + .cookie-checkbox {
    opacity: 0.6;
  }

  .cookie-badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    background: rgba(122, 155, 118, 0.15);
    color: var(--color-success);
    border-radius: 4px;
  }

  .cookie-option-desc {
    font-size: 0.85rem;
    color: var(--color-taupe);
    line-height: 1.5;
    margin: 0;
    padding-left: 2rem;
  }

  .cookie-modal-footer {
    display: flex;
    gap: 0.75rem;
    padding: 1.5rem;
    border-top: 1px solid rgba(166, 155, 141, 0.2);
  }

  .cookie-modal-footer .cookie-btn {
    flex: 1;
  }

  .cookie-modal-footer .cookie-btn-accept {
    background: var(--color-warm-black);
    color: var(--color-cream);
  }

  .cookie-modal-footer .cookie-btn-accept:hover {
    background: var(--color-accent);
  }

  @media (max-width: 768px) {
    .cookie-consent {
      padding: 1rem 1.25rem;
    }

    .cookie-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .cookie-actions {
      width: 100%;
      flex-wrap: wrap;
    }

    .cookie-btn-accept {
      flex: 1;
    }

    .cookie-btn-settings,
    .cookie-btn-reject {
      flex: 1;
    }

    .cookie-modal-footer {
      flex-direction: column;
    }
  }

  @media (max-width: 380px) {
    .cookie-consent {
      padding: 1rem;
    }

    .cookie-text p {
      font-size: 0.8rem;
    }

    .cookie-btn {
      padding: 0.6rem 1rem;
      font-size: 0.8rem;
    }
  }
</style>

<script>
  // Cookie Consent Manager
  declare global {
    interface Window {
      gtag?: (...args: unknown[]) => void;
    }
  }

  const CONSENT_KEY = 'salonmate_cookie_consent';

  interface ConsentState {
    analytics: boolean;
    marketing: boolean;
    timestamp: number;
  }

  function getConsentState(): ConsentState | null {
    const stored = localStorage.getItem(CONSENT_KEY);
    if (!stored) return null;
    try {
      return JSON.parse(stored);
    } catch {
      return null;
    }
  }

  function saveConsentState(state: ConsentState) {
    localStorage.setItem(CONSENT_KEY, JSON.stringify(state));
    // Dispatch custom event for scripts to react
    window.dispatchEvent(new CustomEvent('consentUpdated', { detail: state }));
  }

  function updateGoogleConsent(analytics: boolean, marketing: boolean) {
    if (typeof window.gtag === 'function') {
      window.gtag('consent', 'update', {
        ad_storage: marketing ? 'granted' : 'denied',
        ad_user_data: marketing ? 'granted' : 'denied',
        ad_personalization: marketing ? 'granted' : 'denied',
        analytics_storage: analytics ? 'granted' : 'denied',
      });
    }
  }

  function initCookieConsent() {
    const banner = document.getElementById('cookieConsent');
    const modal = document.getElementById('cookieModal');
    const acceptBtn = document.getElementById('cookieAccept');
    const rejectBtn = document.getElementById('cookieReject');
    const settingsBtn = document.getElementById('cookieSettings');
    const modalClose = document.getElementById('cookieModalClose');
    const rejectAllBtn = document.getElementById('cookieRejectAll');
    const saveSettingsBtn = document.getElementById('cookieSaveSettings');
    const analyticsCheckbox = document.getElementById('analyticsConsent') as HTMLInputElement;
    const marketingCheckbox = document.getElementById('marketingConsent') as HTMLInputElement;

    if (!banner || !modal) return;

    const existingConsent = getConsentState();

    if (existingConsent) {
      // Apply existing consent
      updateGoogleConsent(existingConsent.analytics, existingConsent.marketing);
      return;
    }

    // Show banner after short delay
    setTimeout(() => {
      banner.classList.add('visible');
    }, 1000);

    function hideBanner() {
      banner.classList.remove('visible');
    }

    function hideModal() {
      modal.classList.remove('visible');
    }

    function showModal() {
      modal.classList.add('visible');
    }

    // Accept all
    acceptBtn?.addEventListener('click', () => {
      const state: ConsentState = {
        analytics: true,
        marketing: true,
        timestamp: Date.now()
      };
      saveConsentState(state);
      updateGoogleConsent(true, true);
      hideBanner();
    });

    // Reject all
    rejectBtn?.addEventListener('click', () => {
      const state: ConsentState = {
        analytics: false,
        marketing: false,
        timestamp: Date.now()
      };
      saveConsentState(state);
      updateGoogleConsent(false, false);
      hideBanner();
    });

    // Open settings
    settingsBtn?.addEventListener('click', () => {
      showModal();
    });

    // Close modal
    modalClose?.addEventListener('click', hideModal);

    // Click outside modal
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        hideModal();
      }
    });

    // Reject all from modal
    rejectAllBtn?.addEventListener('click', () => {
      const state: ConsentState = {
        analytics: false,
        marketing: false,
        timestamp: Date.now()
      };
      saveConsentState(state);
      updateGoogleConsent(false, false);
      hideModal();
      hideBanner();
    });

    // Save custom settings
    saveSettingsBtn?.addEventListener('click', () => {
      const state: ConsentState = {
        analytics: analyticsCheckbox?.checked || false,
        marketing: marketingCheckbox?.checked || false,
        timestamp: Date.now()
      };
      saveConsentState(state);
      updateGoogleConsent(state.analytics, state.marketing);
      hideModal();
      hideBanner();
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCookieConsent);
  } else {
    initCookieConsent();
  }
</script>
