---
/**
 * Button Component
 * Consistent button/link styling with variants
 */

import Icon from './Icon.astro';

type IconName = 'check' | 'arrow-right' | 'chevron-left' | 'clock' | 'calendar' | 'message' | 'lightbulb' | 'bell' | 'shield' | 'lock' | 'database' | 'trash' | 'plus' | 'x' | 'send' | 'instagram' | 'facebook';

interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  icon?: IconName;
  iconPosition?: 'left' | 'right';
  fullWidth?: boolean;
  class?: string;
  type?: 'button' | 'submit';
}

const {
  href,
  variant = 'primary',
  size = 'md',
  icon,
  iconPosition = 'right',
  fullWidth = false,
  class: className = '',
  type = 'button',
} = Astro.props;

const Tag = href ? 'a' : 'button';
const baseProps = href ? { href } : { type };
---

<Tag
  {...baseProps}
  class:list={[
    'btn',
    `btn-${variant}`,
    `btn-${size}`,
    { 'btn-full': fullWidth },
    className,
  ]}
>
  {icon && iconPosition === 'left' && <Icon name={icon} size={18} />}
  <slot />
  {icon && iconPosition === 'right' && <Icon name={icon} size={18} />}
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-decoration: none;
    font-weight: 500;
    letter-spacing: 0.01em;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: none;
    cursor: pointer;
  }

  .btn-full {
    width: 100%;
  }

  /* Sizes */
  .btn-sm {
    padding: 0.6rem 1rem;
    font-size: 0.8rem;
  }

  .btn-md {
    padding: 1rem 2rem;
    font-size: 0.95rem;
  }

  .btn-lg {
    padding: 1.1rem 2.5rem;
    font-size: 1rem;
  }

  /* Variants */
  .btn-primary {
    background: var(--color-warm-black);
    color: var(--color-cream);
  }

  .btn-primary:hover {
    background: var(--color-accent);
    gap: 1rem;
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid var(--color-warm-black);
    color: var(--color-warm-black);
  }

  .btn-secondary:hover {
    background: var(--color-warm-black);
    color: var(--color-cream);
  }

  .btn-ghost {
    background: transparent;
    color: var(--color-warm-black);
    padding-left: 0;
    padding-right: 0;
  }

  .btn-ghost:hover {
    color: var(--color-accent);
  }

  /* Icon animation */
  .btn :global(svg) {
    transition: transform 0.3s ease;
  }

  .btn:hover :global(svg) {
    transform: translateX(4px);
  }
</style>
